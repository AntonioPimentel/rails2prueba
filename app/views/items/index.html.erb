<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>
<table>
  <thead>
    <th>Item</th>
    <th>User</th>
    <th>Category</th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.serial %></td>
        <td><%= item.user.name %></td>
        <td><%= item.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>	